

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url = env("MONGODB_URI_DEV")
}

model User {
    id          String  @id @default(uuid()) @map("_id")
    name        String
    email       String  @unique
    password    String
    age         Int
    createdAt   DateTime @default(now())
    updatedAt   DateTime @default(now())
    todos       Todo[]
}

model Todo {
    id          String  @id @default(uuid()) @map("_id")
    title       String
    description String
    completed   Boolean
    user        User    @relation(fields: [userId], references: [id])
    userId      String
    createdAt   DateTime @default(now())
    updatedAt   DateTime @default(now())    
}